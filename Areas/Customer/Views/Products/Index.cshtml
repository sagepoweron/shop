@model IEnumerable<Shop.Models.Product>

@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* <a asp-area="Customer" asp-controller="Products" asp-action="Games">Games</a> *@
@* <a asp-controller="Products" asp-action="Games">Games</a> *@

<h1>Products</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalePrice)
            </th>
@*             <th>
                @Html.DisplayNameFor(model => model.Price)
            </th> *@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(m => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @* @Html.DisplayFor(modelItem => item.ListPrice) *@
                @item.ListPrice.ToString("C")
            </td>
            <td>
                @* @Html.DisplayFor(modelItem => item.SalePrice) *@
                @item.SalePrice.ToString("C")
            </td>
@*             <td>
                @item.Price
            </td> *@
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                |
				<a asp-controller="Cart" asp-action="Add" asp-route-id=@item.Id>Add To Cart</a>
            </td>
        </tr>
}
    </tbody>
</table>
